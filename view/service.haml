-# coding: utf-8
- @service_unselectable ||= false
- selectable_class = @service_unselectable ? 'unselectable' : 'selectable'
%tr{:class => "service_item #{selectable_class}", :id => service.oid, :title => h(service.name)}
  - case service.content.charging
  - when Yabitz::Model::Content::CHARGING_NO_COUNT
    %td.charging_no_count
      %div{:style => "padding-top: 3em;"}
  - when Yabitz::Model::Content::CHARGING_SHARED
    %td.charging_shared
      %div{:style => "padding-top: 3em;"}
  - else
    %td.charging_normal
      %div{:style => "padding-top: 3em;"}
  %td.service_name
    %a{:href => "/ybz/service/#{service.oid}"}&= service.name
  %td.td_padding
    %img{:src => "/images/1x1.gif"}
  %td.service_name
    %a{:href => "/ybz/hosts/service/#{service.oid}"} (hosts)
  %td.td_padding
    %img{:src => "/images/1x1.gif"}
  %td.service_name
    - if service.hypervisors
      %a{:href => "/ybz/hosts/suggest/#{service.oid}"} (Dom0)
    - else
      &nbsp; 
  %td.td_padding
    %img{:src => "/images/1x1.gif"}
  %td.service_content&= service.content.name
  %td.td_line_term
    %img{:src => "/images/1x1.gif"}
