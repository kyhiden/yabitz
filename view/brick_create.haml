-# coding: utf-8

%div#toolbox_spacer_top
%div#toolbox
  %div 機器追加
  %div{:style => "margin-left: 2em;"}
    %img{:src => "/images/1x1.gif"}
  %div
    %a{:href => "/ybz/brick/bulkcreate"} CSV/TSV追加
  %div{:style => "margin-left: 2em;"}
    %img{:src => "/images/1x1.gif"}
%div#toolbox_spacer_bottom
%div#maincontents
  %table.mainviewboxouter
    %tr
      %td
        %div.mainviewbox
          %form.mainform{:name => "brick_create", :action => "/ybz/brick/create", :method => "POST", :onsubmit => "return false;"}
            %table.inputitems
              %tr
                %td.namefield 状態
                %td :
                %td.inputfield
                  %select{:name => "status"}
                    - Yabitz::Model::Brick::STATUS_LIST.each do |state|
                      %option{:value => state}= Yabitz::Model::Brick.status_title(state)
              %tr
                %td.namefield 納品日
                %td :
                %td.inputfield
                  %input.simple{:type => "text", :name => "delivered", :size => 17}
            %div.cloneable
            %div.brickadd_item.cloneable
              %input.cloneable_number{:type => "hidden", :name => "adding0", :value => 0}
              %table.inputitems
                %tr
                  %td.namefield 製品名
                  %td :
                  %td.inputfield
                    %input.simple{:type => "text", :name => "productname0", :size => 30}
                  %td.spacer
                    %div
                  %td.namefield HWID
                  %td :
                  %td.inputfield
                    %input.simple.blank_onclone{:type => "text", :name => "hwid0", :size => 17}
                %tr
                  %td
                    %div{:style => "padding-top: 5px;"}
                %tr
                  %td.namefield シリアル
                  %td :
                  %td.inputfield
                    %input.simple.optional.blank_onclone{:type => "text", :name => "serial0", :size => 30}
                  %td{:colspan => 4}
                    %div.listclone{:style => "text-align: right;"}
                      %img.button{:src => "/images/adding.png"}
                %tr
                  %td
                    %div{:style => "padding-top: 5px;"}
            %div{:style => "padding-right: 3em; text-align: right;"}
              %button{:onclick => "window.location.reload(); return false;"}
                %div{:style => "padding: 0.5em;"} キャンセル
              %button.mainform_commit{:onclick => "return false;"}
                %div{:style => "padding: 0.5em 3em 0.5em 3em;"} 作成
