-# coding: utf-8

- if session[:toppage] and session[:toppage] == 'googlelike'
  %div#toolbox_spacer_top
  %div#toolbox
    %div{:style => "float: right;"}
      %a{:href => "/ybz/top_toggle"} 表示切替
    %h3 Yabitz
    %div{:style => "padding: 1em;"}
      %form.mainform_googlelike{:name => "host_search_googlelike", :action => "/ybz/search", :method => "GET"}
        %input{:type => "hidden", :name => "andor", :value => 'AND'}
        %input{:type => "hidden", :name => "cond0", :value => 0}
        %div.inputfield{:style => "text-align: center; font-size: 150%; margin-bottom: 1em;"}
          %input.simple{:id => "googlelikeinput",:type => "text", :name => "value0", :size => 30}
        %div.namefield{:style => "text-align: center;"}
          %button.search_googlelike{:id => "dnsname_button", :title => "dnsname"}
            %div{:style => "padding: 0.5em 1em 0.5em 1em;"} dns名検索
          %button.search_googlelike{:id => "ipaddress_button", :title => "ipaddress"}
            %div{:style => "padding: 0.5em 1em 0.5em 1em;"} IPアドレス検索
          %button.search_googlelike{:id => "service_button", :title => "service"}
            %div{:style => "padding: 0.5em 1em 0.5em 1em;"} サービス名検索
          %br
          %button.search_googlelike{:id => "rackunit_button", :title => "rackunit"}
            %div{:style => "padding: 0.5em 1em 0.5em 1em;"} ラック位置検索
          %button.search_googlelike{:id => "hwid_button", :title => "hwid"}
            %div{:style => "padding: 0.5em 1em 0.5em 1em;"} HWID検索
          %br
          %button.search_googlelike_smart{:id => "brick_button", :title => "hwid/serial"}
            %div{:style => "padding: 0.5em 1em 0.5em 1em;"} ホスト・機器検索(HWID/シリアル)
  %div#toolbox_spacer_bottom
- else
  %div.container
    %div.pull-right
      %a{:href => "/ybz/top_toggle"} 表示切替
    %h3 Yabitz
    %div{:style => "padding: 1em;"}
      %form.form-inline{:name => "host_search_dns", :action => "/ybz/search", :method => "GET"}
        %input{:type => "hidden", :name => "andor", :value => 'OR'}
        %input{:type => "hidden", :name => "cond0", :value => 0}
        %input{:type => "hidden", :name => "field0", :value => "dnsname"}
        %input{:type => "text", :name => "value0", :size => 30}
        %button.btn dns名検索
      %br
      %form.form-inline{:name => "host_search_ip", :action => "/ybz/search", :method => "GET"}
        %input{:type => "hidden", :name => "andor", :value => 'OR'}
        %input{:type => "hidden", :name => "cond0", :value => 0}
        %input{:type => "hidden", :name => "field0", :value => "ipaddress"}
        %input{:type => "text", :name => "value0", :size => 30}
        %button.btn IPアドレス検索
      %br
      %form.form-inline{:name => "host_search_service", :action => "/ybz/search", :method => "GET"}
        %input{:type => "hidden", :name => "andor", :value => 'OR'}
        %input{:type => "hidden", :name => "cond0", :value => 0}
        %input{:type => "hidden", :name => "field0", :value => "service"}
        %input{:type => "text", :name => "value0", :size => 30}
        %button.btn サービス名検索
      %br
      %form.form-inline{:name => "host_search_rackunit", :action => "/ybz/search", :method => "GET"}
        %input{:type => "hidden", :name => "andor", :value => 'OR'}
        %input{:type => "hidden", :name => "cond0", :value => 0}
        %input{:type => "hidden", :name => "field0", :value => "rackunit"}
        %input{:type => "text", :name => "value0", :size => 30}
        %button.btn ラック位置検索
      %br
      %form.form-inline{:name => "host_search_hwid", :action => "/ybz/search", :method => "GET"}
        %input{:type => "hidden", :name => "andor", :value => 'OR'}
        %input{:type => "hidden", :name => "cond0", :value => 0}
        %input{:type => "hidden", :name => "field0", :value => "hwid"}
        %input{:type => "text", :name => "value0", :size => 30}
        %button.btn HWID検索
      %br
      %form.form-inline{:name => "smart_search", :action => "/ybz/smartsearch", :method => "GET"}
        %input{:type => "text", :name => "keywords", :size => 30}
        %button.btn 機器・ホスト検索
