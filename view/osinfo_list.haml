-# coding: utf-8

%div#toolbox_spacer_top
%div#toolbox
  %p 表示： OS情報一覧
  - if @isadmin
    %div
      選択したOS情報への操作:
      %select.admin_operations#osinfo_operation_list
        %option{:value => 'nonedefault'} 操作を選択してください
        %option{:value => 'none', :disabled => true} -- データ削除 --
        %option{:value => 'delete_records'} 選択したOS情報を消去
%div#toolbox_spacer_bottom
%div#maincontents
  - if @isadmin
    %table#osinfocreate
      %form.smartadd{:name => 'create_osinfo', :action => '/ybz/osinfo/create', :method => "POST"}
        %tr.osinfo_item
          %td.td_line_head
            %div.header_status
          %td.osinfo_name{:style => "padding-left: 1em;"}
            OS名: 
            %input.smartinput{:type => 'text', :size => 16, :name => 'name'}
          %td.td_padding_narrow
            %img{:src => "/images/1x1.gif"}
          %td.td_base
            %input{:type => 'image', :height => 24, :width => 24, :src => '/images/adding.png'}
          %td.td_line_term
            %img{:src => "/images/1x1.gif"}
  %table#osinfolist
    = partial :osinfo, :collection => @osinfos
