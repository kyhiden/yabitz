-# coding: utf-8

%tr.ipsegment_item.selectable{:id => "#{ipsegment.oid}", :title => h(ipsegment.address)}
  - if ipsegment.ongoing
    %td.ipaddress_blank
      %div{:style => "padding-top: 3em;"}
  - else
    %td.ipaddress_holder
      %div{:style => "padding-top: 3em;"}
  %td.ipaddress_address
    %a{:href => "/ybz/ipsegment/#{ipsegment.oid}"}
      &= ipsegment.address + '/' + ipsegment.netmask
  %td.td_padding
    %img{:src => "/images/1x1.gif"}
  %td.ipaddress_version&= ipsegment.version
  %td.td_padding
    %img{:src => "/images/1x1.gif"}
  %td.ipaddress_area
    - if ipsegment.area == Yabitz::Model::IPSegment::AREA_GLOBAL
      %strong GLOBAL
    - else
      = "-"
  %td.td_padding_narrow
    %img{:src => "/images/1x1.gif"}
  %td.ipaddress_used&= @segment_used_ip_map[ipsegment.to_s].size.to_s + " address used"
  %td.td_padding_narrow
    %img{:src => "/images/1x1.gif"}
  %td.ipaddress_memo
    - if ipsegment.notes.nil? or ipsegment.notes.empty?
      [-]
      %img{:src => "/images/1x1.gif"}
    - else
      [メモあり]
  %td.td_line_term
    %img{:src => "/images/1x1.gif"}
